<launch>
	<arg name="machine" default="left-cortex" />
	<arg name="user" default="strands" />

	<machine name="strands_catkin_leftc" address="$(arg machine)" env-loader="/opt/strands/strands_catkin_ws/devel/env.sh" user="$(arg user)" default="true"/>

	<!-- STRANDS people perception -->
	<include file="$(find strands_perception_people_launch)/launch/pedestrian_tracker_robot_with_HOG.launch" >
	    <arg name="machine"  value="$(arg machine)"/>
	    <arg name="user"  value="$(arg user)"/>
	</include>
	
	<!-- STRANDS Head Oreientation -->
	<include file="$(find strands_head_orientation)/launch/head_orientation.launch" >
	    <arg name="machine"  value="$(arg machine)"/>
	    <arg name="user"  value="$(arg user)"/>
	    <arg name="model_dir"  value="/opt/strands/strands_catkin_ws/src/strands_perception_people/strands_head_orientation/models/default"/>
	</include>
</launch>
